/* pages/task/task.wxss */
.swiper-tab{ 
    box-sizing: border-box; 
    width: 100%;  
    border-bottom: 1rpx solid #777777;  
    text-align: center;  
    height: 88rpx;
    line-height: 80rpx;}  
.swiper-tab-list{  
    font-size: 30rpx;  
    display: inline-block;  
    width: 33.33%;  
    color: #777777;  
}  
.on{ color: #43CD80;  
    border-bottom: 6rpx solid #43CD80;}  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
.swiper-box .sms-item{  
  margin: 0 10px;
  font-size: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ccc;
}  
.swiper-box .sms-item .top{
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.swiper-box .sms-item .time{
  height: 100%;
}
.swiper-box .sms-item  .icon{
  display: inline-block;
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
}