/**app.wxss**/
page{  
  background-color: #eeeeee;  
}  
.pt-container{
  padding: 10px;
}
.clearfix:after{
  content: '.';
  height: 0;
  opacity: 0;
  clear: both;
}
.container.ab{
  position:absolute;
  width:100%;
  height: unset;
}
.container {
  height: 100%; 
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 28rpx;
  font-size: 32rpx;
  background-color: #fff;
}
.sms-button-area {
  width: 100%;
}
.sms-button-area button {
  height:80rpx;
  line-height:80rpx;
  margin:24rpx 0;
  font-size:36rpx;
}
.sms-input-area{
  width: 100%;
  /* box-sizing: border-box; */
  margin: 16rpx 0;
}
.sms-input-tip{
  line-height:50rpx;
  font-size:30rpx;
}
.sms-input-tip label{
  color: #666;
}
.sms-input-tip text{
  float: right;
}
.sms-input-main input,.sms-input-main textarea,.sms-input-main .picker{
  border: 1px solid #ddd;
  padding: 10rpx;
  width: unset;
  max-height: 150rpx; 
}
.sms-input-main .picker{
  height: 50rpx;
}
.clearfix:after{
  content: '.';
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
button[type='primary']{
  background-color: #43CD80;
}
.userinfo {
  background-color: transparent;
  border: none;
  font-size:30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo::after{
border: none;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.useritem{
  /* width: 100%; */
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items:center;
  padding: 0 30rpx;
  border-bottom: 1px solid #ddd;
  font-size: 32rpx;
  height: 100rpx;
}
.useritem:last-child ,.userbtn:last-child{
  border: none;
}
.useritem .left{
  color: #666;
}
.gray{
  color: #666;
}
.useritem .right .unit{
   margin-left: 10rpx;
}
.add{
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  text-align: center;
  line-height: 100rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color:#43CD80;
  color: white;
  font-size: 50rpx;
}

